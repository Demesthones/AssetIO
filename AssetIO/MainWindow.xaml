<Window x:Class="AssetIO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssetIO"
        xmlns:viewModel="clr-namespace:AssetIO.MVVM.ViewModel"
        xmlns:view="clr-namespace:AssetIO.MVVM.View"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        
        Style="{StaticResource WinAll}">
    
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border x:Name="border"
            Background="#F7F7F2"
            CornerRadius="12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border 
                Background="#2E2D4D"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                MouseLeftButtonDown="Window_MouseLeftButtonDown">
            </Border>
            <Border
                Background="#E4E3D3"
                Grid.Row="1">

            </Border>
            <Menu Background="Transparent"
                  Width="90"
                  HorizontalAlignment="Left">
                <MenuItem Header="AssetIO"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          Foreground="#F7F7F2"
                          FontSize="22"
                          Margin="0">
                    <MenuItem Header="Settings" 
                              Foreground="#000000"
                              FontSize="14"
                              Command="{Binding ShowSettingsCommand}"/>
                    <MenuItem Header="Open Log Viewer"
                              Foreground="#000000"
                              FontSize="14"
                              Command="{Binding ShowLogSelectorCommand}"/>
                    <Separator />
                    <MenuItem Header="About" 
                              Foreground="#000000"
                              FontSize="14"
                              Command="{Binding ShowAboutCommand}"/>
                    <MenuItem Header="Close" 
                              Foreground="#000000"
                              FontSize="14"/>
                </MenuItem>
            </Menu>
            <Ellipse Fill="#E74B58"
                     Grid.Row="0"
                     Grid.Column="1"
                     Height="12"
                     Width="12"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     Margin="0,0,12,0" MouseLeftButtonDown="closeApp" />
            <Ellipse Fill="#FFB400"
                     Grid.Row="0"
                     Grid.Column="1"
                     Height="12"
                     Width="12"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     Margin="0,0,36,0" MouseLeftButtonDown="minimizeApp" />
            <StackPanel Grid.Column="0"
                        Grid.Row="1"
                        >
                <TextBlock Text="Technician Name:"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Foreground="#2E2D4D"
                           Height="28"
                           FontSize="18"
                           Padding="0,8,0,0"
                           Margin="8,0,0,0"
                           FontFamily="/Fonts/#SpaceGrotesk"
                           />

                <Border Background="#CCC7B9"
                        CornerRadius="12"
                        Height="28"
                        Margin="4">
                    <TextBox Name="tbTechnicianName"
                         FontSize="18"
                         Height="20"
                         VerticalAlignment="Top"
                         MaxLines="1"
                         Margin="4"
                         BorderThickness="0"
                         Background="#CCC7B9"
                         ClipToBounds="True" 
                         FontFamily="/Fonts/SpaceGrotesk"/>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Devices In"
                               FontSize="18"
                               HorizontalAlignment="Center" 
                               Margin="4"
                               Grid.Row="0"/>   
                    <ScrollViewer Margin="0,0,4,0"
                                  Height="200"
                                  VerticalScrollBarVisibility="Auto"
                                  CanContentScroll="True"
                                  Grid.Row="1">
                        <TextBox Name="tbDevicesIn"
                                 AcceptsReturn="True"
                                 Background="#F7F7F2"
                                 Margin="4,0,4,0"
                                 TextWrapping="Wrap"
                                 FontFamily="/Fonts/SpaceGrotesk"
                                 />
                    </ScrollViewer>


                    <TextBlock Text="Devices Out"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="4"
                               Grid.Row="2"/>
                    <ScrollViewer Margin="0,0,4,0"
                                  Height="200"
                                  VerticalScrollBarVisibility="Auto" 
                                  CanContentScroll="True"
                                  Grid.Row="3">
                        <TextBox Name="tbDevicesOut"
                                 AcceptsReturn="True"
                                 Background="#F7F7F2"
                                 Margin="4,0,4,0"
                                 TextWrapping="Wrap"
                                 FontFamily="/Fonts/SpaceGrotesk"
                                 />
                    </ScrollViewer>
                </Grid>


                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="130"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="48" />
                    </Grid.RowDefinitions>

                    <Button Name="btnClear"
                            Content="Clear"
                            Background="#E74B58"
                            Style="{StaticResource ButtonTheme}"
                            Grid.Column="0" Click="clearInputBoxes" Margin="-4,0,-4,0"/>
                    <Button Name="btnSubmit"
                            Content="Submit"
                            Background="#CCC7B9"
                            Style="{StaticResource ButtonTheme}"
                            Grid.Column="1" Click="submitInputBoxes" Margin="-4,0,0,0"/>
                </Grid>
            </StackPanel>
            <Grid Grid.Row="1"
                  Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="660"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="568"/>
                </Grid.RowDefinitions>
                <ContentControl Grid.Row="0"
                                Grid.Column="0"
                                Content="{Binding CurrentView}"/>

            </Grid>
        </Grid>
    </Border>
</Window>
