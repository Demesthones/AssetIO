<Window x:Class="AssetIO.MVVM.View.LogViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssetIO.MVVM.View"
        mc:Ignorable="d"
        Title="{Binding Folder}" Height="600" Width="720">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="528"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <ListView ItemsSource="{Binding View}"
              Padding="0"
              FontSize="14"
              Background="#F7F7F2"
              Grid.Row="0">
            <ListView.View>
                <GridView AllowsColumnReorder="False"
                      ColumnHeaderToolTip="Asset Information">
                    <GridViewColumn Width="170">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <TextBlock 
                                        VerticalAlignment="Center"
                                        LineHeight="20"
                                        MaxHeight="20">
                                        <TextBlock.Text>
                                            <Binding Path="datetime"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DockPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                        <GridViewColumnHeader TextElement.FontSize="18">Datetime
                        </GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn Width="208">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <TextBlock 
                                        VerticalAlignment="Center"
                                        LineHeight="20"
                                        MaxHeight="20">
                                        <TextBlock.Text>
                                            <Binding Path="technician"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DockPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                        <GridViewColumnHeader TextElement.FontSize="18">Technician
                        </GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn Width="208">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <TextBlock 
                                        VerticalAlignment="Center"
                                        LineHeight="20"
                                        MaxHeight="20">
                                        <TextBlock.Text>
                                            <Binding Path="identifier"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DockPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                        <GridViewColumnHeader TextElement.FontSize="18">Asset Identifier
                        </GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <TextBlock 
                                        VerticalAlignment="Center"
                                        LineHeight="20"
                                        MaxHeight="20">
                                        <TextBlock.Text>
                                            <Binding Path="direction"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DockPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                        <GridViewColumnHeader TextElement.FontSize="18">IO
                        </GridViewColumnHeader>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Height="36"
                    >
            <Label
               FontSize="14"
               Content="Search: "
               HorizontalAlignment="Left"
               Margin="4,0,4,0"
               Height="32" 
               Width="60"/>

            <TextBox Name="tbSearch"
                     Width="220"
                     Height="24"
                     Margin="0,2,0,4"
                     Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</Window>
